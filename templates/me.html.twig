{% extends "base.html.twig" %}

{% block title %}{{ user.displayName }}{% endblock %}

{% block content %}
<h2>Hi {{ user.givenName }}!</h2>
<dl>
<dt>ID:</dt>
<dd>{{ user.id }}</dd>
<dt>UPN:</dt>
<dd>{{ user.userPrincipalName }}</dd>
<dt>Given Name:</dt>
<dd>{{ user.GivenName }}</dd>
<dt>Surname:</dt>
<dd>{{ user.surname }}</dd>
{% if user.mail %}
<dt>Email:</dt>
<dd>{{ user.mail }}</dd>
{% endif %}
</dl>
{% endblock %}
